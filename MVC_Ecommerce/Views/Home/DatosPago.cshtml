
@using Dominio
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    var lista = ((List<TipoPago>)ViewBag.listaPagos);
}


<div class="container" style="background-color:lightslategray ;width: 50%;height:150px; margin-top: 100px; border-radius:5px; padding-top:50px">

    <form action="@Url.Action("DatosPago","Home")" method="post">
        <label>Tipo de pago</label>
        @Html.DropDownList("formaDePago", new SelectList(lista,
        nameof(TipoPago.Id), nameof(TipoPago.Nombre)), "seleccione un tipo", new { @class = "cssInput" })

        <button type="submit" class="botoncopia" style="margin-left:10px">Guardar </button>
    </form>
</div>

