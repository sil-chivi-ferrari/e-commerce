@using Dominio;
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    Producto detalle = (Producto)ViewBag.Detalle;
}


@{

    <div class="class="col-md-4"">
        <div class="card" style="width: 500px; margin-top:100px;">
            <div class="card-body">
                <img src="@detalle.UrlImagen" class="card-img-top" alt="...">
                <div style=" padding-left:120px;">
                    <h5 class="card-title" style="font-weight: bold";font-size:30px;>Producto:@detalle.Nombre</h5>
                    <h5 class="card-title" style="font-weight: bold">Descripción @detalle.Descripcion </h5>
                    <h5 class="card-title" style="font-weight: bold">Precio: $@detalle.Precio </h5>
                    <h5 class="card-title" style="font-weight: bold">Color @detalle.color.Nombre </h5>
                    <h5 class="card-title" style="font-weight: bold">Talle @detalle.talle.Nombre </h5>

                    </div>





                    <a href="@Url.Action("Catalogo","Home")" class="btn btn-primary">Seguir mirando</a>
                    @*<a href="@Url.Action("Carrito","Home",new{idAux = detalle.Id})" class="btn btn-primary">Volver</a>*@


                </div>
            </div>
    </div>

}